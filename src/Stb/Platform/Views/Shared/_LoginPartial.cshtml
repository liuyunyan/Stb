@using Microsoft.AspNetCore.Identity
@using Stb.Platform.Models

@inject SignInManager<PlatformUser> SignInManager
@inject UserManager<PlatformUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="platform" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @*<a asp-area="platform" asp-controller="manage" asp-action="index" title="Manage">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span> @UserManager.GetUserName(User)
                </a>*@
                <a href="#">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span> @((await UserManager.GetUserAsync(User)).Name)
                </a>
            </li>
             <li>
                <input type="submit" class="btn navbar-btn btn-link" value="注销" />
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li><a asp-area="platform" asp-controller="account" asp-action="register">Register</a></li>*@
        <li>
            <a asp-area="platform" asp-controller="account" asp-action="login">
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> 登录
            </a>
        </li>
    </ul>
}
