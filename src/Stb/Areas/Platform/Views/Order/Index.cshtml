@model IEnumerable<Stb.Platform.Models.OrderViewModels.OrderIndexViewModel>

@{
    ViewData["Title"] = "工单列表";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">新增工单</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractorStaffName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlatoonName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactDeadline)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Contractor" asp-route-id="@item.ContractorId">
                        @Html.DisplayFor(modelItem => item.ContractorName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractorStaffName)
                    <br />
                    @Html.DisplayFor(modelItem => item.ContractorStaffPhone)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Platoon" asp-route-id="@item.PlatoonId">
                        @Html.DisplayFor(modelItem => item.PlatoonName)
                    </a>
                </td>
                @*<td>
                    <pre>@Html.DisplayFor(modelItem => item.Description)</pre>
                </td>
                <td>
                    @if (item.District != null)
                    {
                        @Html.DisplayFor(modelItem => item.District.ProvinceName)
                        <span> </span>
                        @Html.DisplayFor(modelItem => item.District.CityName)
                        <span> </span>
                        @Html.DisplayFor(modelItem => item.District.DistrictName)
                        <br />
                    }
                    <pre>@Html.DisplayFor(modelItem => item.WorkAddress)</pre>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactDeadline)
                </td>*@
                <td>
                    @if (item.State == 0)
                    {
                        <span>准备状态</span>
                    }
                    else if (item.State == 1)
                    {
                        <span>施工状态</span>
                    }
                    else if (item.State == 2)
                    {
                        <span>完成</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">修改</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">详情</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@await Component.InvokeAsync("Pagination", new { Action = "Index", Page = ViewBag.Page, TotalPage = ViewBag.TotalPage })
