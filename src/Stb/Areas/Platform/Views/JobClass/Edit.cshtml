@model Stb.Data.Models.JobClass

@{
    ViewData["Title"] = "技能设置";
    JobCategory category = ViewData["Category"] as JobCategory;
}

<h2>技能设置 - 工作种类</h2>
<br />
<h4 class="text-center">所属工作门类：@category.Name</h4>
<br />
<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>工作种类信息</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input class="hidden" asp-for="JobCategoryId" />
        <div class="form-group">
            <label class="col-md-2 control-label">所属工作门类</label>
            <div class="col-md-10">
                <input asp-for="@category.Name" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" asp-route-id="@category.Id">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
