@model Stb.Platform.Models.OrderViewModels.PlatoonOrderViewModel

@{
    ViewData["Title"] = "组织施工";
}

<h2>@ViewData["Title"]</h2>
<br />
<div class="form-horizontal">
    <input type="hidden" id="OrderId" value="@Model.Id" />
    <span class="h4">工程信息</span>
    <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.Id" class="col-xs-offset-1" target="_blank">工单详情</a>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ContractorName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ContractorName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ContractorStaffName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ContractorStaffName)
            @Html.DisplayFor(model => model.ContractorStaffPhone)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            <pre>@Html.DisplayFor(model => model.Description)</pre>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.WorkerNeeded)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.WorkerNeeded)
        </dd>
        <dt>
            施工地区
        </dt>
        <dd>
            @if (Model.District != null)
            {
                @Html.DisplayFor(model => model.District.ProvinceName)
                <span> </span>
                @Html.DisplayFor(model => model.District.CityName)
                <span> </span>
                @Html.DisplayFor(model => model.District.DistrictName)
            }
        </dd>
        <dt>施工地点</dt>
        <dd>
            <pre>@Html.DisplayFor(model => model.WorkAddress)</pre>
            @if (Model.WorkLocation != null)
            {
                <img alt="img" src="@($"http://restapi.amap.com/v3/staticmap?location={Model.WorkLocation}&zoom=12&size=300*200&markers=mid,,:{Model.WorkLocation}&key=1ff97f3d9068e5e12e21f3c34480096a")" />
            }
        </dd>
    </dl>
    <br />
    <span class="h4">施工人员</span>
    <a href="#" class="col-xs-offset-1" id="buttonAddOrderWorker">添加工人</a>
    @if (Model.State == 0)
    {
        <a type="button" id="btn_set_workers" class="btn btn-default col-xs-offset-1" href="#">确认名单，开始施工</a>
    }
    else if (Model.State == 1)
    {
        <input type="button" id="btn_set_workers" class="btn btn-default col-xs-offset-1" value="保存人员更改" />
    }
    <hr />

    <div id="SaveWorkersAlertHolder"></div>

    <dl class="dl-horizontal">
        <dt></dt>
        <dd>
            <table class="table" style="max-width:500px">
                <thead>
                    <tr>
                        <th></th>
                        <th>姓名</th>
                        <th>手机</th>
                        <th>身份</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="workerList">
                    @foreach (var worker in Model.Workers)
                    {
                        var isLeader = worker.Id == Model.LeaderWorkerId ? "true" : "false";
                        <tr data-worker-id="@worker.Id" data-is-leader="@isLeader">
                            <td>
                                @if (worker.Id == Model.LeaderWorkerId)
                                {
                                    if (worker.IsCandidate)
                                    {
                                        <span class="text-warning">班长(试单)</span>
                                    }
                                    else
                                    {
                                        <span class="text-warning">班长</span>
                                    }
                                }
                                else
                                {
                                    if (worker.IsCandidate)
                                    {
                                        <span class="text-warning hidden">班长(试单)</span>
                                    }
                                    else
                                    {
                                        <span class="text-warning hidden">班长</span>
                                    }
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-controller="Worker" asp-route-id="@worker.Id" title="@worker.UserName" target="_blank">
                                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                    @Html.DisplayFor(model => worker.Name)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(model => worker.UserName)
                            </td>
                            <td>
                                @if (worker.IsHeader)
                                { <span>班长</span> }
                                else if (worker.IsCandidate)
                                { <span>候选班长</span> }
                                else
                                { <span>工人</span> }
                            </td>
                            <td>
                                <a href="#" class="btn-delete-worker">删除</a>
                                @if (worker.Id == Model.LeaderWorkerId)
                                {
                                    <span> |</span>
                                    <a asp-action="Details" asp-route-id="@worker.Id" class="text-success btn-cancel-leader">取消本工单班长</a>
                                }
                                else if (worker.IsHeader || worker.IsCandidate)
                                {
                                    <span> |</span>
                                    <a asp-action="Details" asp-route-id="@worker.Id" class="btn-cancel-leader">设为本工单班长</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="ModelAddOrderWorker">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">添加工人</h4>
            </div>
            <div class="modal-body" style="min-height:400px">
                <div id="SelectWorkerAlertHolder" class="alert-holder"></div>
                <input id="WorkerSearchInput" class="form-control" placeholder="搜索姓名或手机号码" />
                <table class="table">
                    <thead>
                        <tr>
                            <th>姓名</th>
                            <th>手机</th>
                            <th>身份</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="WorkerTableBody"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">返回</a>
</div>


