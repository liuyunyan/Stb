@model  Stb.Data.Models.OrderEvaluate_Platoon

@{
    ViewData["Title"] = "工单评价";
}

<br />
<form asp-action="SaveOrderEvaluate">
    <input type="hidden" asp-for="@Model.OrderId" value="@ViewBag.OrderId" />
    <table class="table table-responsive table-bordered">
        <thead>
            <tr>
                <th colspan="3" class="h2 text-center">工单评价表（排长）</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td rowspan="9" style="max-width:80px;min-width:80px;vertical-align:middle" class="text-center">排长对班长的评价</td>
                <td rowspan="3" style="max-width:100px;min-width:100px;vertical-align:middle" class="text-center">排长对工单服务质量的评价</td>
                <td class="col-md-12">
                    @Html.DisplayNameFor(model => model.WorkQuality)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.WorkQuality" value="0"> 优秀
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkQuality" value="1"> 合格
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkQuality" value="2"> 不合格
                    </label>
                    <div>
                        <span asp-validation-for="@Model.WorkQuality" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.WorkEfficiency)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.WorkEfficiency" value="0"> 优秀
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkEfficiency" value="1"> 合格
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkEfficiency" value="2"> 不合格
                    </label>
                    <div>
                        <span asp-validation-for="@Model.WorkEfficiency" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.WorkAttitude)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.WorkAttitude" value="0"> 优秀
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkAttitude" value="1"> 合格
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkAttitude" value="2"> 不合格
                    </label>
                    <div>
                        <span asp-validation-for="@Model.WorkAttitude" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td rowspan="3" style="max-width:100px;min-width:100px;vertical-align:middle" class="text-center">排长对班长技能水平的评价</td>
                <td>
                    @Html.DisplayNameFor(model => model.LeaderCanReadDrawings)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.LeaderCanReadDrawings" value="0"> 能
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.LeaderCanReadDrawings" value="1"> 不能
                    </label>
                    <div>
                        <span asp-validation-for="@Model.LeaderCanReadDrawings" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.LeaderCanDoDesign)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.LeaderCanDoDesign" value="0"> 有
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.LeaderCanDoDesign" value="1"> 没有
                    </label>
                    <div>
                        <span asp-validation-for="@Model.LeaderCanDoDesign" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.LeaderAbilityLevel)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.LeaderAbilityLevel" value="0"> 优秀
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.LeaderAbilityLevel" value="1"> 合格
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.LeaderAbilityLevel" value="2"> 不合格
                    </label>
                    <div>
                        <span asp-validation-for="@Model.LeaderAbilityLevel" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td rowspan="2" style="max-width:100px;min-width:100px;vertical-align:middle" class="text-center">排长对班长沟通水平的评价</td>
                <td>
                    @Html.DisplayNameFor(model => model.LeaderCanCooperate)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.LeaderCanCooperate" value="0"> 能
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.LeaderCanCooperate" value="1"> 不能
                    </label>
                    <div>
                        <span asp-validation-for="@Model.LeaderCanCooperate" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.LeaderDoReport)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.LeaderDoReport" value="0"> 汇报
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.LeaderDoReport" value="1"> 不汇报
                    </label>
                    <div>
                        <span asp-validation-for="@Model.LeaderDoReport" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td rowspan="1" style="max-width:100px;min-width:100px;vertical-align:middle" class="text-center">排长对班长团队建设的评价</td>
                <td>
                    @Html.DisplayNameFor(model => model.WorkerJudgement)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.WorkerJudgement" value="0"> 优秀
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkerJudgement" value="1"> 合格
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkerJudgement" value="2"> 不合格
                    </label>
                    <div>
                        <span asp-validation-for="@Model.WorkerJudgement" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="3" class="text-right">
                    @if (Model == null)
                    {
                        <input type="submit" value="保存评价表" class="form-control btn-primary" />
                    }
                    else
                    {
                        <span>评价人：</span>@Html.DisplayFor(model => model.EvaluateUser.Name)
                        <span>&nbsp;&nbsp;</span>
                        @Html.DisplayFor(model => model.Time)
                    }
                </td>
            </tr>
        </tbody>
    </table>
</form>

@if (!ViewBag.Blank)
{
    <div>
        <a asp-action="Index">返回工单列表</a>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
