@model IEnumerable<Stb.Platform.Models.OrderViewModels.OrderIndexViewModel>

@{
    ViewData["Title"] = "我的工单";
}

<h2>@ViewData["Title"]</h2>

<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractorStaffName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeadWorkerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractorStaffName)
                    <br />
                    @Html.DisplayFor(modelItem => item.ContractorStaffPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeadWorkerName)
                    @if (item.LeadWorkerIsCandidate == true)
                    {
                        <span>(试单)</span>
                    }
                </td>
                <td>
                    @if (item.State == 0)
                    {
                        <span>准备状态</span>
                    }
                    else if (item.State == 1)
                    {
                        <span>施工状态</span>
                    }
                    else if (item.State == 2)
                    {
                        <span>完成</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">工单信息</a>
                    @if (item.State <= 1)
                    {
                        <span> |</span>
                        <a asp-action="Organize" asp-route-id="@item.Id">人员组织</a>
                        <span> |</span>
                        <a asp-action="Edit" asp-route-id="@item.Id">修改</a>
                    }
                    @if (item.State == 2)
                    {
                        <span> |</span>
                        @if (item.IsPlatoonEvaluated)
                        {
                            <a asp-action="OrderEvaluate" asp-route-id="@item.Id" class="btn-success">工单评价</a>
                        }
                        else
                        {
                            <a asp-action="OrderEvaluate" asp-route-id="@item.Id">工单评价</a>
                        }

                        @if (item.LeadWorkerIsCandidate == true)
                        {
                            <span> |</span>
                            @if (item.IsTrailEvaluated)
                            {
                                <a asp-action="TrailEvaluate" asp-route-id="@item.Id" class="btn-success">试单评价</a>
                            }
                            else
                            {
                                <a asp-action="TrailEvaluate" asp-route-id="@item.Id">试单评价</a>
                            }
                        }
                        if (item.IsWorkerWorkLoadSet)
                        {
                            <span> |</span>
                            <a asp-action="WorkLoad" asp-route-id="@item.Id" class="btn-success">工作量</a>
                        }
                        else
                        {
                            <span> |</span>
                            <a asp-action="WorkLoad" asp-route-id="@item.Id">工作量</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@await Component.InvokeAsync("Pagination", new { Action = "Index", Page = ViewBag.Page, TotalPage = ViewBag.TotalPage })
