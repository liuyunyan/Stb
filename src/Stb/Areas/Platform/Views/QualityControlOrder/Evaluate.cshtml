@model  Stb.Data.Models.OrderEvaluate_QualityControl

@{
    ViewData["Title"] = "工单评价";
}

<br />
<form asp-action="SaveEvaluate">
    <input type="hidden" asp-for="@Model.OrderId" value="@ViewBag.OrderId" />
    <table class="table table-responsive table-bordered">
        <thead>
            <tr>
                <th colspan="3" class="h2 text-center">工单评价表（品控部）</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td rowspan="5" style="max-width:80px;min-width:80px;vertical-align:middle" class="text-center">品控部对工单的评价</td>
                <td rowspan="4" style="max-width:100px;min-width:100px;vertical-align:middle" class="text-center">品控部对工单质量的评价</td>
                <td class="col-md-12">
                    @Html.DisplayNameFor(model=>model.WorkQuality)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.WorkQuality" value="0"> 优秀
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkQuality" value="1"> 合格
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkQuality" value="2"> 不合格
                    </label>
                    <div>
                        <span asp-validation-for="@Model.WorkQuality" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.WorkEfficiency)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.WorkEfficiency" value="0"> 优秀
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkEfficiency" value="1"> 合格
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkEfficiency" value="2"> 不合格
                    </label>
                    <div>
                        <span asp-validation-for="@Model.WorkEfficiency" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.WorkAttitude)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.WorkAttitude" value="0"> 优秀
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkAttitude" value="1"> 合格
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.WorkAttitude" value="2"> 不合格
                    </label>
                    <div>
                        <span asp-validation-for="@Model.WorkAttitude" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.LeaderAbility)
                    <label class="radio-inline col-xs-offset-1">
                        <input type="radio" asp-for="@Model.LeaderAbility" value="0"> 优秀
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.LeaderAbility" value="1"> 合格
                    </label>
                    <label class="radio-inline">
                        <input type="radio" asp-for="@Model.LeaderAbility" value="2"> 不合格
                    </label>
                    <div>
                        <span asp-validation-for="@Model.LeaderAbility" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td style="vertical-align:middle" class="text-center">
                    品控部对投诉的处理
                </td>
                <td>
                    <textarea asp-for="@Model.ComplaintSettlement" class="form-control table-text-input" ></textarea>
                    <div>
                        <span asp-validation-for="@Model.ComplaintSettlement" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="3" class="text-right">
                    @if (Model == null)
                    {
                        <input type="submit" value="保存评价表" class="form-control btn-primary" />
                    }
                    else
                    {
                        <span>评价人：</span>@Html.DisplayFor(model=>model.EvaluateUser.Name)
                        <span>&nbsp;&nbsp;</span>
                        @Html.DisplayFor(model => model.Time)
                    }
                </td>
            </tr>
        </tbody>
    </table>
</form>

@if (!ViewBag.Blank)
{
    <div>
        <a asp-action="Index">返回工单列表</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
