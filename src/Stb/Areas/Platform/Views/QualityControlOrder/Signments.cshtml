@model IEnumerable<Stb.Api.Models.OrderViewModels.SignmentData>

@{
    ViewData["Title"] = "工单签到记录";
}

<h2>@ViewData["Title"]</h2>

<br>

@foreach(var signment in Model)
{
    <div>
        <hr />
        <div>
            <span>@signment.UserName </span> &nbsp;&nbsp;
            @if (signment.InOut)
            {
                <span>签到</span>
            }
            else
            {
                <span>签退</span>
            }
            &nbsp;&nbsp;@Html.DisplayFor(model => signment.DateTime)
        </div>
        <p>
            @signment.Address
        </p>
        <div>
            <img class="img-responsive" src="@signment.LocationUrl" />
        </div>
        <br />
        <div>
            @if (signment.Pics != null)
            {
                var piclist = signment.Pics.Split(new[] { ',' }).ToList();
                if (piclist.Count > 0)
                {
                    <p>签到图片</p>
                    <div class="row">
                        @foreach (var img in piclist)
                        {
                            <img src="@img" style="margin:3px" class="col-xs-6 col-sm-4 col-md-3" />
                        }
                    </div>
                }
            }
        </div>
        <br />
    </div>
}
