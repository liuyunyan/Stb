<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 师徒帮</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/platform.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
              crossorigin="anonymous"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/platform.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp- asp-controller="home" asp-action="index" class="navbar-brand">师徒帮后台管理</a>
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        @if (User.IsInRole(Roles.Administrator))
                        {
                            <li>
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">系统设置<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a asp- asp-controller="Account" asp-action="index">用户管理</a></li>
                                </ul>
                            </li>
                        }

                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">人员管理<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a asp- asp-controller="Contractor" asp-action="index">承包商管理</a></li>
                                <li><a asp- asp-controller="Platoon" asp-action="index">排长管理</a></li>
                                <li><a asp- asp-controller="Worker" asp-action="index">工人管理</a></li>
                            </ul>
                        </li>

                        <li><a asp- asp-controller="Project" asp-action="index">项目管理</a></li>
                        <li><a asp- asp-controller="Order" asp-action="index">工单管理</a></li>

                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">技能管理<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a asp- asp-controller="JobCategory" asp-action="index">技能设置</a></li>
                                <li><a asp- asp-controller="JobCategory" asp-action="preview">技能一览</a></li>
                            </ul>
                        </li>
                    </ul>
                }
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - 和顺智视</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/typeahead.js/dist/typeahead.bundle.js"></script>
        <script src="~/js/platform.js" asp-append-version="true"></script>
        <script src="~/js/districts.js" asp-append-version="true"></script>
        <script src="~/js/jobClasses.js" asp-append-version="true"></script>
        <script src="~/js/worker.js" asp-append-version="true"></script>
        <script src="~/js/order.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
                crossorigin="anonymous"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/lib/typeahead.js/dist/typeahead.bundle.min.js" asp-append-version="true"></script>
        <script src="~/js/platform.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
