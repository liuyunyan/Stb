@model IEnumerable<Stb.Platform.Models.ContractorViewModels.ContractorViewModel>

@{
    ViewData["Title"] = "承包商管理";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">新增承包商</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contractor.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractor.Address)
            </th>
            <th>
                负责人@(Html.DisplayNameFor(model => model.HeadUser.Name))
            </th>
            <th>
                负责人@(Html.DisplayNameFor(model => model.HeadUser.UserName))

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractor.Enabled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Contractor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contractor.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeadUser.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeadUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contractor.Enabled)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Contractor.Id">修改</a> |
                    <a asp-action="Details" asp-route-id="@item.Contractor.Id">详情</a> |
                    <a asp-action="Delete" asp-route-id="@item.Contractor.Id">删除</a>&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;
                    <a asp-controller="ContractorStaff" asp-action="Index" asp-route-id="@item.Contractor.Id">员工</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@await Component.InvokeAsync("Pagination", new { Action = "Index", Page = ViewBag.Page, TotalPage = ViewBag.TotalPage })
