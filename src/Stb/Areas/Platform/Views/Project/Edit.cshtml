@model Stb.Data.Models.Project

@{
    ViewData["Title"] = "修改项目";
}

<h2>@ViewData["Title"]</h2>
<br />
<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>项目信息</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Client" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Client" class="form-control" />
                <span asp-validation-for="Client" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContractNo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContractNo" class="form-control" />
                <span asp-validation-for="ContractNo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Contract" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Contract" class="form-control" />
                <span asp-validation-for="Contract" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContractAmount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContractAmount" class="form-control" />
                <span asp-validation-for="ContractAmount" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
