@model Stb.Data.Models.ContractorViewModels.ContractorViewModel

@{
    ViewData["Title"] = "新增承包商";
}

<h2>@ViewData["Title"]</h2>
<br />
<form asp-action="Create">
    <div class="form-horizontal">
        <h4>承包商信息</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Contractor.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Contractor.Name" class="form-control" />
                <span asp-validation-for="Contractor.Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Contractor.Address" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Contractor.Address" class="form-control" />
                <span asp-validation-for="Contractor.Address" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Contractor.Phone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Contractor.Phone" class="form-control" />
                <span asp-validation-for="Contractor.Phone" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Contractor.Enabled" />
                    <label asp-for="Contractor.Enabled"></label>
                </div>
            </div>
        </div>
        <h4>负责人信息</h4>
        <hr />
        <div class="form-group">
            <label asp-for="HeadStaff.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="HeadStaff.Name" class="form-control" />
                <span asp-validation-for="HeadStaff.Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HeadStaff.Phone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="HeadStaff.Phone" class="form-control" />
                <span asp-validation-for="HeadStaff.Phone" class="text-danger" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回承包商列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
